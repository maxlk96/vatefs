{
  "name": "Arrival Flight Strip Template",
  "version": "1.0",
  "description": "Electronic flight strip template optimized for arrival operations",
  "fields": [
    {
      "id": "callsign",
      "label": "CALLSIGN",
      "type": "text",
      "required": true,
      "maxLength": 10,
      "description": "Aircraft callsign"
    },
    {
      "id": "atyp",
      "label": "ATYP",
      "type": "text",
      "required": true,
      "maxLength": 4,
      "description": "Aircraft type (ICAO code)"
    },
    {
      "id": "adep",
      "label": "ADEP",
      "type": "text",
      "required": true,
      "maxLength": 4,
      "pattern": "^[A-Z]{4}$",
      "description": "Departure aerodrome (ICAO code)"
    },
    {
      "id": "ades",
      "label": "ADES",
      "type": "text",
      "required": true,
      "maxLength": 4,
      "pattern": "^[A-Z]{4}$",
      "description": "Destination aerodrome (ICAO code)"
    },
    {
      "id": "assr",
      "label": "ASSR",
      "type": "text",
      "required": false,
      "maxLength": 4,
      "pattern": "^[0-7]{4}$",
      "description": "SSR code (squawk)"
    },
    {
      "id": "cfl",
      "label": "CFL",
      "type": "text",
      "required": false,
      "maxLength": 5,
      "description": "Cleared Flight Level"
    },
    {
      "id": "star",
      "label": "STAR",
      "type": "text",
      "required": false,
      "maxLength": 10,
      "description": "Standard Terminal Arrival Route"
    },
    {
      "id": "rwy",
      "label": "RWY",
      "type": "text",
      "required": false,
      "maxLength": 3,
      "description": "Assigned runway"
    },
    {
      "id": "eta",
      "label": "ETA",
      "type": "time",
      "required": false,
      "description": "Estimated Time of Arrival"
    },
    {
      "id": "frul",
      "label": "FRUL",
      "type": "select",
      "required": true,
      "options": ["IFR", "VFR", "SVFR"],
      "default": "IFR",
      "description": "Flight rules"
    }
  ],
  "layout": {
    "header": ["callsign", "frul"],
    "row1": ["atyp", "assr", "cfl"],
    "row2": ["adep", "ades", "rwy"],
    "row3": ["star", "eta"]
  },
  "colors": {
    "IFR": "#1976D2",
    "VFR": "#4CAF50",
    "SVFR": "#FF9800"
  }
}

